{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "rootDir": "./", // SUGESTÃO: deixa claro o ponto de entrada
      "typeRoots": [
        "node_modules/@types"
      ],
      "types": [
        "node"
      ],
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true, // boa prática no Windows
      "skipLibCheck": true // evita erros em libs externas
    },
    "include": [
      "**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist" // SUGESTÃO: evita recompilar arquivos já transpilados
    ],
    "buildOnSave": true,
    "compileOnSave": true
  }
  